<Window x:Class="IMClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
    <DockPanel>
        <ListView DockPanel.Dock="Left" Width="180" SelectionMode="Single"
                  ItemsSource="{Binding FriendList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="30">
                        <TextBlock Text="{Binding}" FontSize="20"/>
                        <TextBlock/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label DockPanel.Dock="Top" Height="40"/>
        <ListView DockPanel.Dock="Top" Height="300"/>
        <TextBox DockPanel.Dock="Top" Height="90"/>
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" Width="80" Margin="10"/>
    </DockPanel>
</Window>
